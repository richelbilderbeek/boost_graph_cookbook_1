#include <boost/test/unit_test.hpp>
#include "create_text_vertices_markov_chain.h"
#include "get_vertex_names.h"

BOOST_AUTO_TEST_CASE(test_create_text_vertices_markov_chain)
{
  const auto g
    = create_text_vertices_markov_chain();
  const std::vector<std::string> expected_names{
    "Good", "Not bad"
  };
  const std::vector<std::string> vertex_names{
    get_vertex_names(g)
  };
  BOOST_CHECK(expected_names == vertex_names);
}

